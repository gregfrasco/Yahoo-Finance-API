{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true
  },
  "lib": ["es2017", "es7", "es6", "dom"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*spec.ts",
    "test"
  ]
}
